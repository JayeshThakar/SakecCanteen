<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food"
    android:id="@+id/drawer_layout"
    android:background="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordering food is now easy"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First make Sure you have booked a table"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <View
            android:id="@+id/myRectangleView"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_marginTop="175dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFA500"
            android:text="Masala Dosa"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:layout_marginTop="180dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Dosa, sambhar, potato sabzi, chttuny"
            android:textColor="@color/black"
            android:layout_marginTop="205dp"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/dosa"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="280dp"/>
        <Button
            android:id="@+id/add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:background="@drawable/round_button"
            android:layout_marginTop="226dp"
            android:layout_marginLeft="40dp"/>

        <Button
            android:id="@+id/sub"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:background="@drawable/round_button"
            android:layout_marginTop="226dp"
            android:layout_marginLeft="128dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 40"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="190dp"/>
        <TextView
            android:id="@+id/num"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="0"
            android:layout_marginTop="235dp"
            android:layout_marginLeft="92dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="#FFA500"
            android:paddingTop="5dp"
            android:paddingLeft="11dp"/>
        <Button
            android:id="@+id/checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check Out"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"/>





    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:id="@+id/navig"
        android:layout_gravity="start"/>



</androidx.drawerlayout.widget.DrawerLayout>